<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.com.healthy_exercise.GuideActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guide_dots"
        android:background="#ffffff"
        android:layout_margin="0dp">

    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:id="@+id/guide_dots"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/dots1"
            android:padding="0dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#ffffff"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/dots2"
            android:padding="0dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/dots1"/>
        <ImageView
            android:id="@+id/dots3"
            android:padding="0dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/dots2"/>
        <ImageView
            android:id="@+id/dots4"
            android:padding="0dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/dots3"/>
    </RelativeLayout>

</RelativeLayout>
